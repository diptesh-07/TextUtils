button,
input,
optgroup,
select,
textarea {
    font-family: sans-serif;
    font-size: 100%;
    line-height: 1.15;
    margin: 0
}

html {
    box-sizing: border-box
}

*,
*:before,
*:after {
    box-sizing: inherit
}

body {
    background: #1D2026;
    -moz-osx-font-smoothing: grayscale;
    -webkit-font-smoothing: antialiased
}

html {
    font-size: 20px;
    line-height: 30px
}

body {
    color: #8A94A7;
    font-size: 1rem
}

body,
button,
input,
select,
textarea {
    font-family: "IBM Plex Sans", sans-serif
}

p {
    color: white;
}

h4 {
    color: white;
}

h1 {
    color: white;
}

a {
    position: relative;
    color: #8A94A7;
    text-decoration: none;
    right: 180px;
}

a:hover,
a:active {
    outline: 0;
    text-decoration: none
}

.container,
.container-sm {
    width: 100%;
    margin: 0 auto;
    padding-left: 16px;
    padding-right: 16px
}

@media (min-width: 481px) {

    .container,
    .container-sm {
        padding-left: 24px;
        padding-right: 24px
    }
}

.container {
    max-width: 1128px
}

.container-sm {
    max-width: 848px
}

.container .container-sm {
    max-width: 800px;
    padding-left: 0;
    padding-right: 0
}

.screen-reader-text {
    clip: rect(1px, 1px, 1px, 1px);
    position: absolute !important;
    height: 1px;
    width: 1px;
    overflow: hidden;
    word-wrap: normal !important
}

.screen-reader-text:focus {
    border-radius: 2px;
    box-shadow: 0 0 2px 2px rgba(0, 0, 0, 0.6);
    clip: auto !important;
    display: block;
    font-size: 14px;
    letter-spacing: 0px;
    font-weight: 600;
    line-height: 16px;
    text-decoration: none;
    text-transform: uppercase;
    background-color: #1D2026;
    color: #0270D7 !important;
    border: none;
    height: auto;
    left: 8px;
    padding: 16px 32px;
    top: 8px;
    width: auto;
    z-index: 100000
}

.list-reset {
    list-style: none;
    padding: 0
}



.has-bottom-divider {
    position: relative
}

.has-bottom-divider::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    display: block;
    height: 1px;
    background: #242830
}

.sr .has-animations .is-revealing {
    visibility: hidden
}

.has-animations .anime-element {
    visibility: hidden
}

.anime-ready .has-animations .anime-element {
    visibility: visible
}

.field-grouped>.control:not(:last-child) {
    margin-bottom: 8px
}

@media (min-width: 641px) {
    .field-grouped {
        display: flex
    }

    .field-grouped>.control {
        flex-shrink: 0
    }

    .field-grouped>.control.control-expanded {
        flex-grow: 1;
        flex-shrink: 1
    }

    .field-grouped>.control:not(:last-child) {
        margin-bottom: 0;
        margin-right: 8px
    }
}

/* // button css */
.button {
    display: inline-flex;
    font-size: 14px;
    letter-spacing: 0px;
    font-weight: 600;
    line-height: 16px;
    text-decoration: none !important;
    text-transform: uppercase;
    background-color: #242830;
    color: #fff !important;
    border: none;
    border-radius: 2px;
    cursor: pointer;
    justify-content: center;
    padding: 16px 32px;
    height: 48px;
    text-align: center;
    white-space: nowrap
}

.button:hover {
    background: #262a33
}

.button:active {
    outline: 0
}

.button::before {
    border-radius: 2px
}

.button-sm {
