/* sign up btn css */

.sign_upbtn {
    padding: 10px;
    text-decoration: none;
    border: 0px solid skyblue;
    outline: none;
    color: black;
    /* color: rgb(255, 255, 255); */
    background: #0d6efd;
    border-color: #0d6efd;
    cursor: pointer;
    position: relative;
    top: 130px;
    right: 408px;
    z-index: 0;
    font-weight: bold;
    border-radius: 0.25rem;

    font-family: -apple-system, system-ui, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
}

body.dark .sign_upbtn {
    color: white;
}

.sign_upbtn:before {
    content: "";
    background: linear-gradient(45deg,
            #ff0000,
            #ff7300,
            #fffb00,
            #48ff00,
            #00ffd5,
            #002bff,
            #7a00ff,
            #ff00c8,
            #ff0000);
    position: absolute;
    top: -2px;
    left: -2px;
    background-size: 400%;
    z-index: -1;
    filter: blur(5px);
    width: calc(100% + 4px);
    height: calc(100% + 4px);
    animation: glowingbn5 20s linear infinite;
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
    border-radius: 10px;
}

@keyframes glowingsign_upbtn {
    0% {
        background-position: 0 0;
    }

    50% {
        background-position: 400% 0;
    }

    100% {
        background-position: 0 0;
    }
}

.sign_upbtn:active {
    color: #000;
}

.sign_upbtn:active:after {
    background: transparent;
}

.sign_upbtn:hover:before {
    opacity: 1;
}

.sign_upbtn:after {
    z-index: -1;
    content: "";
    position: absolute;
    width: 100%;
    height: 100%;
    background: #191919;
    left: 0;
    top: 0;
    border-radius: 10px;
}

/* end of sign up button css */